{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "jsx": "react",
    "outDir": "build",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts", "server/**/*.tsx", "src/**/*.ts", "src/**/*.tsx"]
}
